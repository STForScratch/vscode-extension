{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ScratchTools Feature data.json",
  "type": "object",
  "required": ["title", "description", "credits", "type", "dynamic", "default", "resources", "options", "scripts", "styles"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },
    "credits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["username", "url"],
        "properties": {
          "username": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        },
        "additionalProperties": false
      }
    },
    "type": {
      "type": "array",
      "items": { "type": "string", "enum": ["Website", "Forums", "Editor", "Egg"] },
      "minItems": 1
    },
    "tags": { "type": "array", "items": { "type": "string" } },
    "dynamic": { "type": "boolean" },
    "default": { "type": "boolean" },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "type"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": { "type": "integer", "enum": [0,1,2,3] }
        },
        "additionalProperties": true
      }
    },
    "scripts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "runOn"],
        "properties": {
          "file": { "type": "string" },
          "runOn": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "styles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "runOn"],
        "properties": {
          "file": { "type": "string" },
          "runOn": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
