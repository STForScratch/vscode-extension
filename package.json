{
  "name": "scratchtools-vscode",
  "displayName": "ScratchTools Extension",
  "description": "An extension for managing ScratchTools features, userscripts, and userstyles within VSCode.",
  "icon":"icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/daniel4-scratch/scratchtools-vscode"
  },
  "version": "0.0.1-alpha",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:scratchtoolsFeatures",
    "onCommand:scratchtools.toolbox",
    "onCommand:scratchtools.addFeature",
    "onCommand:scratchtools.addUserscript",
    "onCommand:scratchtools.addUserstyle",
    "onCommand:scratchtools.addResource",
    "onCommand:scratchtools.refreshFeatures",
    "onCommand:scratchtools.openFeatureData"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "scratchtools.toolbox",
      "title": "ScratchTools: Open Toolbox"
    },{
      "command": "scratchtools.addFeature",
      "title": "ScratchTools: Add Feature",
      "icon": "$(add)"
    },{
      "command": "scratchtools.addUserscript",
      "title": "ScratchTools: Add Userscript",
      "icon": "$(file-code)"
    },{
      "command": "scratchtools.addUserstyle",
      "title": "ScratchTools: Add Userstyle",
      "icon": "$(symbol-color)"
    },{
      "command": "scratchtools.addResource",
      "title": "ScratchTools: Add Resource",
      "icon": "$(file-media)"
    },{
      "command": "scratchtools.refreshFeatures",
      "title": "ScratchTools: Refresh Features",
      "icon": "$(refresh)"
    },{
      "command": "scratchtools.openFeatureData",
      "title": "ScratchTools: Open Feature data.json",
      "icon": "$(file-code)"
    }],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scratchtoolsViewContainer",
          "title": "ScratchTools",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "scratchtoolsViewContainer": [
        {
          "id": "scratchtoolsFeatures",
          "icon": "icon.svg",
          "name": "Features"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "scratchtools.refreshFeatures",
          "when": "view == scratchtoolsFeatures",
          "group": "navigation@1"
        },
        {
          "command": "scratchtools.addFeature",
          "when": "view == scratchtoolsFeatures",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "scratchtools.openFeatureData",
          "when": "view == scratchtoolsFeatures && viewItem == scratchtoolsFeature",
          "group": "inline@0"
        },
        {
          "command": "scratchtools.addUserscript",
          "when": "view == scratchtoolsFeatures && viewItem == scratchtoolsFeature",
          "group": "inline@1"
        },
        {
          "command": "scratchtools.addUserstyle",
          "when": "view == scratchtoolsFeatures && viewItem == scratchtoolsFeature",
          "group": "inline@2"
        },
        {
          "command": "scratchtools.addResource",
          "when": "view == scratchtoolsFeatures && viewItem == scratchtoolsFeature",
          "group": "inline@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "scratchtools.toolbox",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "true"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ["features/*/data.json"],
        "url": "./schemas/data.schema.json"
      },
      {
        "fileMatch": ["features/features.json"],
        "url": "./schemas/features.schema.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
  "test": "node ./test/runTest.js",
  "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
  "@vscode/test-electron": "^2.5.2",
  "vsce": "^2.15.0"
  }
}
